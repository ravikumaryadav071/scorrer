<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/popup_screen_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.scorrer.ravi.scorrer.CricketTeamFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/team_name_layout"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <AutoCompleteTextView
            style="@style/InputFields"
            android:id="@+id/team_name"
            android:hint="@string/opposition_team_name_hint"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_team_button"
            android:text="@string/add_team_button"
            android:background="@color/colorButton"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team_name_layout"
        android:id="@+id/show_team_name"
        android:textSize="@dimen/my_text_view"/>
</RelativeLayout>
