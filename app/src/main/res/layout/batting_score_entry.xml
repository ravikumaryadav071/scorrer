<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayBG_5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/batting_score_entry_margin_top"
        android:layout_marginRight="@dimen/batting_score_entry_margin_right"
        android:layout_marginLeft="@dimen/batting_score_entry_margin_left"
        android:background="@color/colorWhite">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/user_icon1"
            android:background="@drawable/circular_bg"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/username_bg"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/batting_score_entry_margin_top"
                android:layout_marginLeft="@dimen/batting_score_entry_margin_left"
                android:layout_marginBottom="@dimen/batting_score_entry_margin_bottom">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:alpha="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayBG_6"
                    android:layout_gravity="center"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/out_status"
                    android:text="@string/not_out"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/batting_score_entry_margin_top"
                android:layout_marginLeft="@dimen/batting_score_entry_margin_left"
                android:layout_marginBottom="@dimen/batting_score_entry_margin_bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Runs: "
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/runs"
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="start"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Balls: "
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/balls"
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="start"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4s: "
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/fours"
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="start"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="6s: "
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/sixes"
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="start"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Strk Rate: "
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/strk_rate"
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="start"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Power Hit: "
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/power_hit"
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="start"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>