<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayBG_5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/batting_score_entry_margin_top"
        android:layout_marginRight="@dimen/batting_score_entry_margin_right"
        android:layout_marginLeft="@dimen/batting_score_entry_margin_left"
        android:background="@color/colorWhite">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/user_icon1"
            android:background="@drawable/circular_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:gravity="center"
                android:background="@drawable/username_bg"
                android:textColor="@color/colorBlack"
                android:alpha="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/batting_score_entry_margin_top"
                android:layout_marginLeft="@dimen/batting_score_entry_margin_left"
                android:layout_marginBottom="@dimen/batting_score_entry_margin_bottom"
                android:orientation="vertical"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Overs: "
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/overs"
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="start"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Runs: "
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/runs"
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="start"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wickets: "
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/wickets"
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="start"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Eco: "
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/eco"
                        android:ellipsize = "end"
                        android:singleLine = "true"
                        android:gravity="start"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>