<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statsType"
        android:gravity="center"
        android:background="@color/greenBG_2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ft_stat"
            android:layout_weight="1"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center">
            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:id="@+id/ft_bar"
                android:layout_weight="1"
                android:background="@color/redBG_6">
            </View>
            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:id="@+id/st_bar"
                android:layout_weight="1"
                android:background="@color/yellowBG_6">
            </View>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/st_stat"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>