<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_list_height"
    android:id="@+id/player_list_entry_layout"
    android:background="@drawable/menu_button">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/player_list_username_height"
            android:id="@+id/player_username"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <ImageButton
            android:layout_width="@dimen/player_list_entry_height"
            android:layout_height="@dimen/player_list_entry_height"
            android:id="@+id/edit_button"
            android:background="@drawable/edit_icon"
            android:layout_marginRight="@dimen/player_list_button_right_margin"
            android:layout_gravity="center"/>
        <ImageButton
            android:layout_width="@dimen/player_list_entry_height"
            android:layout_height="@dimen/player_list_entry_height"
            android:id="@+id/cancel_button"
            android:background="@drawable/cancel_icon"
            android:layout_marginRight="@dimen/player_list_button_right_margin"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>