<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate
            android:fromDegrees="0"
            android:toDegrees="0"
            android:pivotX="0%"
            android:pivotY="0%">
            <shape
                android:shape="rectangle">
                <size
                    android:height="20dp"
                    android:width="30dp"></size>
                <stroke
                    android:color="@android:color/transparent"
                    android:width="0dp"/>
                <solid
                    android:color="@color/yellowBG"  />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="0"
            android:pivotX="98%"
            android:pivotY="-10%">
            <shape
                android:shape="rectangle">
                <stroke
                    android:color="@android:color/transparent"
                    android:width="0dp"/>
                <solid
                    android:color="@color/colorWhite"  />
            </shape>
        </rotate>
    </item>
</layer-list>